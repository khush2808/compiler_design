#include<stdio.h>

int add(int a, int b) {
	return (a+b);
}

int subtract(int a, int b) {
	return (a-b);
}

int factorial(int num) {
	if(num<=1)
		return 1;
	return num*factorial(num-1);
}

int main() {
	int a,b;

	scanf("Enter two numbers: %d %d",&a,&b);
	printf("Addition: %d",add(a,b));
	printf("Subtraction: %d", subtract(a,b));
	printf("Factorial of %d: %d",a,factorial(a));
}
